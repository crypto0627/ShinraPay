{
  "name": "ShinraPay",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
